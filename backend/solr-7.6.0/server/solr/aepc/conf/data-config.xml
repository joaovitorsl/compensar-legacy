<?xml version="1.0"?>
<dataConfig>
<dataSource name="MyMongo" type="MongoDataSource" database="aepc" />
<document name="import">
 <!-- if query="" then it imports everything -->
     <uniqueKey>id</uniqueKey>    

  <entity  processor="MongoEntityProcessor"
		collection="usuario"   
              query=""
             datasource="MyMongo"
             transformer="MongoMapperTransformer" name="usuario">

               <!--  If mongoField name and the field declared in schema.xml are same than no need to declare below.
                     If not same than you have to refer the mongoField to field in schema.xml
                    ( Ex: mongoField="EmpNumber" to name="EmployeeNumber"). -->                                              

           <field column="_id"  name="id"/>               
                                                                                                                                                                                                                                                                                                                                                               
	</entity>

<entity  processor="MongoEntityProcessor"
              query=""
             collection="questao-subj"   
             datasource="MyMongo"
             transformer="MongoMapperTransformer" name="questao-subj">

               <!--  If mongoField name and the field declared in schema.xml are same than no need to declare below.
                     If not same than you have to refer the mongoField to field in schema.xml
                    ( Ex: mongoField="EmpNumber" to name="EmployeeNumber"). -->                                              

           <field column="_id"  name="id"/>               
           <field column="autor" name="autor" mongoField="autor"/> 
           <field column="enunciado" name="enunciado" mongoField="enunciado"/>       
           <field column="competencias" name="competencias" mongoField="competencias"/> 
           <field column="espelho" name="espelho" mongoField="espelho"/>          
           <field column="tipo" name="tipo" mongoField="tipo"/>  
           <field column="fonte" name="fonte" mongoField="fonte"/>   

                                                                                                                                                                                                       
	</entity>

     <entity  processor="MongoEntityProcessor"
              query=""
             collection="questao-obj"   
             datasource="MyMongo"
             transformer="MongoMapperTransformer" name="questao-obj">

               <!--  If mongoField name and the field declared in schema.xml are same than no need to declare below.
                     If not same than you have to refer the mongoField to field in schema.xml
                    ( Ex: mongoField="EmpNumber" to name="EmployeeNumber"). -->                                              

           <field column="_id"  name="id"/>               
           <field column="autor" name="autor" mongoField="autor"/> 
           <field column="enunciado" name="enunciado" mongoField="enunciado"/>    
           <field column="alternativas" name="alternativas" mongoField="alternativas"/> 
           <field column="alternativas.texto" name="alternativas.texto" mongoField="alternativas.texto"/> 
           <field column="alternativas.correta" name="alternativas.correta" mongoField="alternativas.correta"/>       
           <field column="competencias" name="competencias" mongoField="competencias"/> 

           <field column="tipo" name="tipo" mongoField="tipo"/>  
           <field column="fonte" name="fonte" mongoField="fonte"/>   
                                                                                                                                                                                                       
	</entity>




</document>
 


</dataConfig>
